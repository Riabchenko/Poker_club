<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_800">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll"
            android:background="@color/gradient_radiel_backgraund">
        <!--  сюда и вставляй свой код-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ЗАКРЫТИЕ СТОЛОВ"
            android:id="@+id/textView"
            android:textSize="36dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:paddingTop="50dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:id="@+id/progress_2">
            </ProgressBar>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Начисление БОНУСОВ"
                android:id="@+id/textView39"
                android:textSize="28dp"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity="center" />

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:id="@+id/button15"
                android:textColor="#FFFfFFFf"
                android:background="@color/button0102"
                android:drawableRight="@android:drawable/ic_media_play"
                android:padding="15dp"
                android:text="Далее"
                android:onClick="inEdit" />
        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Внести деньги на столы"
                android:id="@+id/textView2"
                android:textSize="28dp"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity="center" />

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:id="@+id/next"
                android:textColor="#FFFfFFFf"
                android:background="@color/button0102"
                android:drawableRight="@android:drawable/ic_media_play"
                android:padding="15dp"
                android:text="Далее"
                android:onClick="game_table0" />
        </TableRow>
        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Информация о внесенных деньгах "
                android:id="@+id/textView32"
                android:textSize="28dp"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:paddingTop="20dp" />

        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:gravity="center"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="с"
                    android:id="@+id/textView36"
                    android:textSize="28dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dp"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/day1"
                    android:textSize="20dp"
                    android:background="@drawable/abc_popup_background_mtrl_mult"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton6"
                    android:src="@android:drawable/ic_menu_today"
                    android:onClick="kassa_f"
                    android:background="@color/background"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:gravity="center"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="по"
                    android:id="@+id/textView37"
                    android:textSize="28dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dp"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/day2"
                    android:textSize="20dp"
                    android:background="@drawable/abc_popup_background_mtrl_mult"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton7"
                    android:src="@android:drawable/ic_menu_today"
                    android:onClick="kassa_s"
                    android:background="@color/background"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="637dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingTop="20dp"
                android:gravity="right">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:id="@+id/button11"
                    android:textColor="#FFFfFFFf"
                    android:background="@color/button0102"
                    android:drawableRight="@android:drawable/ic_media_play"
                    android:padding="15dp"
                    android:text="Далее"
                    android:onClick="review_in" />
            </LinearLayout>
        </LinearLayout>

    </TableLayout>


        </ScrollView>

</LinearLayout>