<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:id="@+id/ScreenThree_id">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:background="@color/gradient_radiel_backgraund">
        <!--  сюда и вставляй свой код-->



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_table"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="26dp"
            android:padding="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_table"
                android:gravity="center">

            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_cash">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:background="@color/button0102"
                android:layout_marginTop="5dp"
                android:cropToPadding="true"
                android:adjustViewBounds="false"
                android:gravity="left"
                android:layout_weight="5"
                android:onClick="game_table0_back"
                android:focusableInTouchMode="false" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/textView16"-->
                <!--android:layout_weight="30" />-->
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:id="@+id/pb_table"
                android:layout_weight="30">
            </ProgressBar>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/ch1"
                android:background="@color/button0102"
                android:layout_marginTop="5dp"
                android:cropToPadding="true"
                android:adjustViewBounds="false"
                android:gravity="right"
                android:layout_weight="5"
                android:onClick="in" />

        </LinearLayout>

    </TableLayout>

</LinearLayout>

    </ScrollView>
</LinearLayout>