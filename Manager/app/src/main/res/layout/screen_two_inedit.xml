<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:id="@+id/ScreenThree_inEdit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:background="@color/gradient_radiel_backgraund">
        <!--  сюда и вставляй свой код-->



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_table_edit"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="26dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="Начисление бонусов клиентам" />

        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tl_table_edit"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="wrap_content"
            android:background="@drawable/shape_rect"
            android:layout_height="3dp"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_cash">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/pb_bonus"
                android:layout_weight="30">
            </ProgressBar>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center" >

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Назад"
                android:id="@+id/button16"
                android:onClick="back_to_two"
                android:drawableLeft="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:textColor="#ffffffff"
                android:clickable="true"
                android:background="@color/button0102"
                android:padding="15dp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Начислить бонус"
                    android:id="@+id/button17"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ch1"
                    android:textColor="#ffffffff"
                    android:clickable="true"
                    android:background="@color/button0102"
                    android:padding="15dp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="210dp"
                    android:layout_height="100dp"
                    android:text="Начислить бонус"
                    android:id="@+id/bonus_post"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"
                    android:clickable="true"
                    android:background="@color/button0102"
                    android:padding="15dp"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:drawableRight="@android:drawable/ic_menu_send"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/bonus_ok"
                    android:layout_toStartOf="@+id/bonus_ok"
                    android:onClick="give_bonus" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Подтвердить"
                    android:id="@+id/bonus_ok"
                    android:drawableRight="@drawable/ch1"
                    android:textColor="#ffffffff"
                    android:clickable="true"
                    android:background="@color/button0102"
                    android:padding="15dp"
                    android:onClick="onCl_edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </TableLayout>

</LinearLayout>

    </ScrollView>
</LinearLayout>