<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient android:type="radial" android:endColor="#007b8a91" android:startColor="#ff93abb1" android:gradientRadius="400"/>
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dip"
                android:topLeftRadius="20dip"
                android:topRightRadius="20dp"/>
            <stroke android:width="3dip"
                android:color="#ff7b8a91" />
                <!--android:dashGap="6dip"-->
                <!--android:dashWidth="8dip"-->
            <padding android:left="20dip" android:right="20dip" android:top="7dip" android:bottom="7dip"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <gradient android:type="radial" android:endColor="#007b8a91" android:startColor="#0093abb1" android:gradientRadius="400"/>
            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dip"
                android:topLeftRadius="20dip"
                android:topRightRadius="20dp"/>
            <stroke android:width="3dip"
                android:color="#ff7b8a91" />
            <!--android:dashGap="6dip"-->
            <!--android:dashWidth="8dip"-->
            <padding android:left="20dip" android:right="20dip" android:top="7dip" android:bottom="7dip"/>
        </shape>
    </item>
</selector>