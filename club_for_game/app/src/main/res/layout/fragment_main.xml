<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@color/bacgraund">

    <TextView android:text="@string/come" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_wellcome"
        android:textSize="50dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите, пожалуйста, стол:"
        android:id="@+id/textView"
        android:textSize="28dp"
        android:layout_weight="1"
        android:layout_above="@+id/tableRow"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2">

    </TableRow>

    <TableRow
        android:layout_width="420dp"
        android:layout_height="200dp"
        android:padding="30dp"
        android:id="@+id/tableRow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_wellcome"
            android:layout_weight="2.22"
            android:background="@drawable/abc_popup_background_mtrl_mult"
            android:textSize="20dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_wellcome"
            android:layout_below="@+id/tableRow"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:visibility="invisible" />

        <Button
            android:layout_width="184dp"
            android:layout_height="55dp"
            android:text="Подключиться"
            android:id="@+id/bt_wellcome"
            android:onClick="reg_table_onClic"
            android:background="@color/button0102"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tableRow"
            android:layout_toEndOf="@+id/tableRow"
            android:textColor="#ffffffff" />

    </TableRow>

</RelativeLayout>
